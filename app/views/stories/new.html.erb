<div class='content_wrapper'>
  <div class='story_wrapper'>

    <h1 class='pageTitle'>Add new story</h1>

    <% if @story.errors.full_messages.any? %>
        <% @story.errors.full_messages.each do |message| %>
        <div class="alert alert-danger"><%= message %></div> </br>
        <% end %>
    <% end %>

    <br />
    <br />
    <span style='font-size: 14px;'>Please provide a description or fill the User Story template for the new story!</span>
    <br />
    <br />
    <br />

    <%= form_for :story, url: newstory_path do |f| %>
        <strong><%= f.label "Description" %></strong>
        <%= f.text_field :description %>

        <br />
        <br />

        <strong><%= f.label "Template" %></strong>
        As <%= f.text_field :as %>,
        I want <%= f.text_field :want %>
        so that <%= f.text_field :so_that %>

        <br />
        <br />

        <strong><%= f.label "Acceptance criteria" %></strong>
        <%= f.text_field :criteria %>

        <br />
        <br />

        <strong><%= f.label "Size estimate" %></strong>
        <%= f.text_field :size %>


        <%= f.hidden_field :story_column_id, :value => current_sprint.story_columns.first.id  %>
        <%= f.hidden_field :position, :value => 0 %>

        <br />
        <br />

            <%= f.submit "Add story!" %>

    <% end %>

    <br />
    <br />
    <br />
    <br />
    <%= link_to 'Return to ' + current_board.name, current_board %>
  </div>
</div>
